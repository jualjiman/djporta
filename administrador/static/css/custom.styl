.navbar-default 
	.navbar-nav 
		> li
			> a
				&:focus
				&:hover
					color darkcolor
		> .active
			> a
				color darkcolor

				&:hover
				&:focus
					color darkcolor

.btn-primary 
	color color
	background-color white 
	border-color color
	transition all transitionTime ease

.btn-primary.active
	color cwhite
	border-color color
	background color

.btn-primary
	&:hover 
	&:focus 
	&:active
		@extend .btn-primary.active
.open 
	> .dropdown-toggle.btn-primary
		@extend .btn-primary.active
		
