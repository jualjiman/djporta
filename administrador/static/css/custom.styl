.navbar-default 
	.navbar-nav 
		> li
			> a
				&:focus
				&:hover
					color darkcolor
		> .active
			> a
				color darkcolor

				&:hover
				&:focus
					color darkcolor

.btn-primary 
	color color
	background-color white 
	border-color color
	transition all 0.5s ease

.btn-primary.active
	color cwhite
	border solid 1px darkcolor
	background color

.btn-primary
	&:hover 
	&:focus 
	&:active
		@extend .btn-primary.active
.open 
	> .dropdown-toggle.btn-primary
		@extend .btn-primary.active
		
