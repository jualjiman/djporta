 @import "fonts.css"

green = #0395a6; //#03a679
darkgreen = darken(green,20%)
darkergreen = darken(green,40%)

grisclaro = #FAFAFA
gris = #eeeeee
grisobscuro = #E4E4E4

cblack = #3a3a3a
cgray = #747474

cwhite = #e7e7e7
cyellow	= #F6B322
 

*
	font-family 'Open Sans', sans-serif

header
	background green
	border-bottom: solid 4px darkgreen
	position relative

hr 
	background-image: -webkit-linear-gradient(left, transparent, rgba(0, 0, 0, 0.2), transparent)
	background-image: linear-gradient(to right, transparent, rgba(0, 0, 0, 0.2), transparent)
	border: 0
	height: 1px
	margin: 22px 0 22px 0

#mainContent
	display none

.separacionVertical
	padding-bottom 20px

.separacionVerticalMin
	padding-bottom 12px

.navbar-brand
	cursor default 
	img
		border-radius 50%
		width 130px
		transition transform 0.3s ease

		&:hover
			transform scale(1.1)
	h1
		color white

.icon-github,
.icon-download
	color green
	position absolute
	bottom -23px
	font-size 30px
	border solid 2px darkgreen
	border-radius 50%
	width 45px
	height 45px
	text-align center
	text-decoration none
	background cwhite
	padding-top 6px
	transition transform 0.3s ease

	&:hover
		transform scale(1.2)

.icon-download
	right 20px

.icon-github
	right 70px
	padding-left 5px

.icon-award
	color: cyellow
	font-size: 32px;
	position: absolute;
	top: 15px;
	left: -6px;

.pRelative
	position relative
// -----------------------------------
.navbarFix
	margin-bottom 0
	.navbar-collapse
		text-align initial
		display inline-block !important
		padding-top 22px
		float right
	.navbar-header
		display inline-block
		.navbar-brand
			text-align left
			display inline-block

			img
				width 58px
			h1
				display inline-block
				margin-left 10px
				font-size 24px
// ----------------------------------

.titulo,
.desc
	padding 0 10px
.desc
	text-align justify

.titulo
	font-weight 600
	color cgray

.subtitulo
	font-weight normal
	font-size 16px
	
	&:before
		content	" "

.expe-lugar
	display	inline-block
	margin-left	10px
	color green
	font-size 16px

.proyl
	text-decoration none

	&:hover
		box-shadow 10px 10px 10px red

a.thumbnail

		&:hover
		&:focus
		&:active
			border-color green
			text-decoration none
			cursor pointer
.jumbotron
	border-bottom solid 1px grisobscuro

.tituloPrincipal
	color green
	font-weight 600

.fondoObscuro
	background grisclaro
	border-top solid 1px gris
	border-bottom solid 1px gris
footer
	border-top solid 5px darkergreen
	background cblack
	height 160px

	p
		color: #929699;
		text-align: center;
		margin: 0 0 1em 0;
		&:first-child
			color: #c4c4c4;
			text-align: center;
			margin: 2em 0 0.2em 0

